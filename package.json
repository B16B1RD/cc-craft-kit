{
  "name": "cc-craft-kit",
  "version": "0.1.0",
  "description": "統合開発キット - Claude Code上でTDD/SDD/GitHub完全連携を実現",
  "keywords": [
    "claude-code",
    "tdd",
    "sdd",
    "github",
    "agile",
    "development-toolkit"
  ],
  "author": "cc-craft-kit Project Contributors",
  "license": "MIT",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "pretest": "npm run lint:all",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "lint:all": "npm run lint && npm run markdownlint && npm run textlint",
    "format": "prettier --write \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "textlint": "textlint \"README.md\" \"CHANGELOG.md\" \"CLAUDE.md\" \"docs/QUICK_START.md\" \"docs/ARCHITECTURE.md\" \"docs/MIGRATION_GUIDE.md\" \".claude/agents/code-reviewer.md\" \".claude/agents/refactoring-assistant.md\" \".claude/skills/**/*.md\" \".claude/commands/cft/*.md\" \"!.claude/commands/cft/watch.md\" --ignore-path .gitignore",
    "textlint:fix": "textlint --fix \"README.md\" \"CHANGELOG.md\" \"CLAUDE.md\" \"docs/QUICK_START.md\" \"docs/ARCHITECTURE.md\" \"docs/MIGRATION_GUIDE.md\" \".claude/agents/code-reviewer.md\" \".claude/agents/refactoring-assistant.md\" \".claude/skills/**/*.md\" \".claude/commands/cft/*.md\" \"!.claude/commands/cft/watch.md\" --ignore-path .gitignore",
    "markdownlint": "markdownlint-cli2 \"**/*.md\" \"#node_modules\" \"#.cc-craft-kit\"",
    "markdownlint:fix": "markdownlint-cli2 --fix \"**/*.md\" \"#node_modules\" \"#.cc-craft-kit\"",
    "db:migrate": "tsx src/core/database/migrate.ts",
    "check:sync": "tsx src/scripts/check-sync.ts",
    "sync:dogfood": "tsx src/scripts/sync-dogfood.ts",
    "sync:dogfood:dry": "tsx src/scripts/sync-dogfood.ts --dry-run --verbose",
    "migrate:structure": "tsx src/scripts/migrate-structure.ts",
    "migrate:structure:dry": "tsx src/scripts/migrate-structure.ts --dry-run --verbose",
    "replace:takumi": "tsx src/scripts/replace-takumi-references.ts",
    "replace:takumi:dry": "tsx src/scripts/replace-takumi-references.ts --dry-run",
    "migrate:takumi": "tsx src/scripts/migrate-takumi-to-cc-craft-kit.ts",
    "migrate:takumi:dry": "tsx src/scripts/migrate-takumi-to-cc-craft-kit.ts --dry-run",
    "prepare": "husky"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "@octokit/auth-app": "^8.1.2",
    "@octokit/graphql": "^9.0.3",
    "@octokit/rest": "^22.0.1",
    "better-sqlite3": "^11.7.0",
    "chokidar": "^4.0.3",
    "dotenv": "^16.4.7",
    "eventemitter2": "^6.4.9",
    "handlebars": "^4.7.8",
    "kysely": "^0.27.4",
    "octokit": "^4.0.2",
    "tsyringe": "^4.8.0",
    "yaml": "^2.8.1",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@textlint-ja/textlint-rule-preset-ai-writing": "^1.6.1",
    "@types/better-sqlite3": "^7.6.12",
    "@types/chokidar": "^1.7.5",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.19.1",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.11",
    "markdownlint-cli2": "^0.19.0",
    "prettier": "^3.4.2",
    "reflect-metadata": "^0.2.2",
    "textlint": "^15.3.0",
    "textlint-rule-preset-ja-spacing": "^2.4.3",
    "textlint-rule-preset-ja-technical-writing": "^12.0.2",
    "ts-jest": "^29.2.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  },
  "files": [
    "dist",
    "templates"
  ],
  "lint-staged": {
    "*.md": [
      "textlint --fix",
      "markdownlint-cli2 --fix"
    ],
    "src/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
